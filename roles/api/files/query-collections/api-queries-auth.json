
{ "queries": [
    {
        "name": "getRoleName",
        "query": "query getRoleId($role_name: String!) { role(where: {role_name: {_eq: $role_name}}) { role_id } }"
    },
    {
        "name": "getVisibleDevIds",
        "query": "query getVisibleDevIds($role_id: Int!) { device(where: {role_to_devices: {role_id: {_eq: $role_id}}}) { dev_id } }"
    },
    {
        "name": "getVisibleDevIdsFromRoleName",
        "query": "query getVisibleDevIdsFromRoleName($role_name: String!) { device(where: {role_to_devices: {role_id: {_eq: getRoleId($role_name)}}}) { dev_id } }"
    },
    {
        "name": "roleCanViewAllDevices",
        "query": "query roleCanViewAllDevices($role_id: Int!) { role(where:{role_id: {_eq: $role_id}}) { role_can_view_all_devices } }"
    }
]
