<div class="modal-backdrop @(Show? "" : "d-none")" style="background-color:rgba(0,0,0,0.5);">
    <div class="@(Show? "modal-open" : "modal")" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="close" @onclick="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    @Footer
                    <button type="button" class="btn btn-primary" @onclick="Close">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public string Title { get; set; } = "EMPTY_TITLE";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public bool Show { get; set; } = false;

    [Parameter]
    public Action OnClose { get; set; } = new Action(() => { });

    private void Close()
    {
        Show = false;
        OnClose();
    }
}
