            </AuthorizeView>
            <AuthorizeView Roles="@($"{Roles.Admin}, {Roles.Auditor}, {Roles.FwAdmin}")">
                <li class="nav-item px-2">
                    <NavLink class="nav-link" href="settings/credentials">
