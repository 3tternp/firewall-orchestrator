    private string DisplayPreview(Connection conn)
    {
        return userConfig.GetText("source") + ": " + string.Join(", ", conn.SrcAppRoles.ConvertAll(s => s.Name)) 
            + (conn.SrcAppRoles.Count > 0 && conn.Sources.Count > 0 ? ", " : "")
            + string.Join(", ", conn.Sources.ConvertAll(s => s.IP)) + ", "
            + userConfig.GetText("destination") + ": " + string.Join(", ", conn.DstAppRoles.ConvertAll(s => s.Name))
            + (conn.DstAppRoles.Count > 0 && conn.Destinations.Count > 0 ? ", " : "")
            + string.Join(", ", conn.Destinations.ConvertAll(d => d.IP)) + ", "
            + userConfig.GetText("service") + ": " + string.Join(", ", conn.Services.ConvertAll(s => s.Name));
    }

    private void AddConn()
