[Unit]
Description={{ product_name }} Blazor UI
{% if 'apiserver' in group_names and 'authserver' in group_names -%}
After=network.target remote-fs.target nss-lookup.target {{ api_service_name }}.service {{ auth_service_name }}.service
{% elif 'apiserver' in group_names -%}
After=network.target remote-fs.target nss-lookup.target {{ api_service_name }}.service
{% elif 'authserver' in group_names -%}
After=network.target remote-fs.target nss-lookup.target {{ auth_service_name }}.service
{% else -%}
After=network.target remote-fs.target nss-lookup.target
{%- endif %}
[Service]
WorkingDirectory={{ ui_start_dir }}
ExecStart=/usr/bin/dotnet run FWO.dll
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier={{ ui_syslog_id }}
User={{ fworch_user }}
Environment=
[Install]
WantedBy=multi-user.target
